require('dotenv').config({ path: './config.env' });
const mysql = require('mysql');

let pool = null; // Stocke l'instance unique du pool

function connecter(callback) {
    if (!pool) {
        // Configuration adapt√©e √† votre config.env existant
        const dbConfig = {
            connectionLimit: 10,
            host: process.env.DB_HOST || 'localhost',
            user: process.env.DB_USER || 'root',
            password: process.env.DB_PASSWORD || '',
            database: process.env.DB_NAME || 'fatnelle',
            port: process.env.DB_PORT || 3306,
            acquireTimeout: 60000,
            timeout: 60000,
            reconnect: true,
            charset: 'utf8mb4'
        };

        console.log('üîß Cr√©ation du pool MySQL avec config:', {
            host: dbConfig.host,
            user: dbConfig.user,
            database: dbConfig.database,
            port: dbConfig.port
        });

        pool = mysql.createPool(dbConfig);

        // Gestion des erreurs du pool
        pool.on('connection', function (connection) {
            console.log('‚úÖ Nouvelle connexion MySQL √©tablie:', connection.threadId);
        });

        pool.on('error', function(err) {
            console.error('‚ùå Erreur du pool MySQL:', err);
            if(err.code === 'PROTOCOL_CONNECTION_LOST') {
                console.log('üîÑ Tentative de reconnexion...');
                pool = null; // Forcer la recr√©ation du pool
            }
        });

        console.log("‚úÖ Pool de connexions MySQL cr√©√©.");
    } else {
        console.log("üîÑ Pool de connexions MySQL r√©utilis√©.");
    }

    // Retourner directement le pool sans test qui pourrait le fermer
    return callback(null, pool);
}

module.exports = { connecter };
